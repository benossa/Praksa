<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/linear"
    >


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/relative"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="0.25"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:id="@+id/linear1">



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo"/>

        <EditText
        android:layout_below="@+id/textLogin"
        android:id="@+id/ETUsername"
        android:hint="Username"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/txt_shape"
        android:padding="12dp"
        android:layout_margin="4dp"
        />

    <EditText

        android:id="@+id/ETPassword"
        android:hint="Password"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ETUsername"
        android:password="true"
        android:background="@drawable/txt_shape"
        android:padding="12dp"
        android:layout_margin="4dp"
        />

        <CheckBox
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:text="Zapamti login podatke"
            android:id="@+id/cbZapamtiPrijavu"
            android:textColor="@android:color/white"/>

        <Button
        android:textSize="17sp"
        android:textColor="#fff"
        android:id="@+id/btn_login"
        android:text="@string/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbZapamtiPrijavu"
        android:background="@drawable/btn_shape_selector"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />

        </LinearLayout>
</LinearLayout>
